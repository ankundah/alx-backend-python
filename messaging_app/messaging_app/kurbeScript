#!/bin/bash
# kurbeScript - Simple Kubernetes setup and check script with auto-install

set -e

# Function to check and install kubectl
install_kubectl() {
  echo "âš ï¸ kubectl not found. Installing..."
  curl -LO "https://dl.k8s.io/release/$(curl -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"
  chmod +x kubectl
  sudo mv kubectl /usr/local/bin/
  echo "âœ… kubectl installed successfully."
}

# Function to check and install minikube
install_minikube() {
  echo "âš ï¸ minikube not found. Installing..."
  curl -LO https://storage.googleapis.com/minikube/releases/latest/minikube-linux-amd64
  sudo install minikube-linux-amd64 /usr/local/bin/minikube
  rm minikube-linux-amd64
  echo "âœ… Minikube installed successfully."
}

echo "ğŸ” Checking dependencies..."

# Check if kubectl is installed
if ! command -v kubectl &> /dev/null
then
  install_kubectl
else
  echo "âœ… kubectl is already installed."
fi

# Check if minikube is installed
if ! command -v minikube &> /dev/null
then
  install_minikube
else
  echo "âœ… Minikube is already installed."
fi

echo "ğŸš€ Starting Kubernetes cluster with Minikube..."
minikube start

echo "âœ… Minikube started successfully."

echo "ğŸ” Checking cluster info..."
kubectl cluster-info

echo "ğŸ“¦ Checking node status..."
kubectl get nodes

echo "ğŸ“‹ Retrieving available pods..."
kubectl get pods --all-namespaces

echo "ğŸ‰ Kubernetes cluster is up, verified, and pods are listed!"
